@{
    ViewData["Title"] = "Independent Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<IndependentProject.Models.Settlement>

<h2>Refugee Population by Country</h2>
<h4>Select Country, year, and type to display data on refugees from a specific country.</h4>
<form  class="results">
    <label>Country</label>
    <select name="name" id="name">
       @foreach(var org in ViewBag.Origin)
       {
           <option value="@org["origin"]">@org["origin_en"]</option>

       }
    </select>
    <label>Year</label>
    <select name="year" id="year">
       
       @for(var i = 2000; i<2014; i++)
       {
           <option value = @i> @i </option>

       }
    </select>
    <label>Population Type</label>
    <select name="ref" id="ref">
        <option value ="RF">Refugees</option>
        <option value ="AS">Asylum Seekers</option>

    </select>
   

    <input type="submit" value="See Results" />
</form>
<div></div>
<div id="line_div"></div>
<div id="map"></div>


<script>

        google.charts.setOnLoadCallback(drawRegionsMap);
         google.charts.setOnLoadCallback(drawLine);
         
      function drawRegionsMap(data) {
        
          var jsonData = data;

        var data = new google.visualization.DataTable();
          data.addColumn('string','Country');
          data.addColumn('number','Refugees');
          var refugees;
          for (i=0; i<jsonData.length; i++){
            var name= jsonData[i].country_of_residence_en;

            if(jsonData[i].value !== null){

              refugees = parseInt(jsonData[i].value)

            }
            else{
               refugees = 0;
            }

           

            data.addRows([[name,refugees]])
          }
  
 

          var options = {
              colors: ['#eff3ff', '#bdd7e7', '#6baed6', '#2171b5'],
              title: "Refugee Camps",
        };

        var chart = new google.visualization.GeoChart(document.getElementById('map'));

        chart.draw(data, options);
      }

