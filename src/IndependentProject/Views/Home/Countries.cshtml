  $(document).ready(function(){
     google.charts.load("visualization", "1", { packages: ["geochart"] });
     google.charts.setOnLoadCallback(drawRegionsMap);
     $('.results').submit(function (event) {
         google.charts.load("visualization", "1", { packages: ["geochart", "table", "corechart", "bar","line",'sankey'] });
         event.preventDefault();
         var org = $("#name").val();
         var popType= $("#ref").val();
         var year= $("#year").val(); 

          $.ajax({
             url: "http://data.unhcr.org/api/stats/time_series_all_years.json?population_type_code=" + popType + "&country_of_origin=" + org +"",
             type: 'GET',
             cache: true,
             success: function (res) {
                 drawLine(res);
             }
          });

          $.ajax({
              url: "http://data.unhcr.org/api/stats/time_series.json?year=" + year + "&country_of_origin=" + org + "&population_type_code=" + popType + "",
              type: 'GET',
              cache: true,
              success: function (res) {
